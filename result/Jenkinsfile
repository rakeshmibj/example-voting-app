pipeline {

    agent {
      docker 'node:8.16-alpine'
    }

    stages {
        stage('Build') {
	    when{
		changeset "**/result/**"
	    }
            steps {
                echo 'Building result app..'
		dir("result"){
                	sh 'npm install'
		}
            }
        }
        
        stage('Test') {
	    when{
		changeset "**/result/**"
	    }
            steps {
                echo 'Testing result app..'
		dir("result"){
                	sh 'npm test'
		}
            }
        }
        
    }

    post {
        always{
            echo "Building multibranch pipeline for worker is completed"
        }
    }
}
